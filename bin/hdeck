#!/usr/bin/env ruby

require_relative '../lib/hdeck'

harrow = HDeck::Harrow.new

if HDeck::Harrow::PLAYING_CARDS.include?(ARGV[0])
  selected_card = harrow.convert_from_playing_card(ARGV[0].upcase)
  puts selected_card.to_s
else
  hand = harrow.draw(ARGV[0].to_i > 0 ? ARGV[0].to_i : 1)
  hand.each do |card|
    puts
    puts card.to_s
  end
end
